<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </FrameLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup2"
            android:layout_width="358dp"
            android:layout_height="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_container">

            <com.google.android.material.chip.Chip
                android:id="@+id/weekChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/week_chip_button_text"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/darkBlue" />


            <com.google.android.material.chip.Chip
                android:id="@+id/monthChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/month_chip_button_text"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/darkBlue" />

            <com.google.android.material.chip.Chip
                android:id="@+id/sessionsChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sessions"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/darkBlue" />

            <com.google.android.material.chip.Chip
                android:id="@+id/addSessionChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="new session"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/darkBlue"
                app:chipIcon="@drawable/ic_baseline_add_24_w" />

        </com.google.android.material.chip.ChipGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>